{
  "name": "archet",
  "version": "1.0.5",
  "description": "Archetype task runner",
  "main": "dist/index.js",
  "bin": {
    "archet": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "nodemon -x 'esr --cache' -w src -e ts ./src/index.ts",
    "start": "wireit",
    "lint": "wireit",
    "build": "wireit",
    "build:check": "tsc --noEmit",
    "test": "wireit",
    "test:watch": "wireit",
    "release": "pnpm build && pnpm changeset publish"
  },
  "wireit": {
    "start": {
      "command": "node ./dist",
      "dependencies": [
        "lint",
        "test",
        "build"
      ]
    },
    "lint": {
      "command": "eslint ./src",
      "files": [
        "./eslintrc.js",
        "./eslintignore",
        "./src/**/*.ts"
      ],
      "output": []
    },
    "build": {
      "command": "tsc --pretty",
      "dependencies": [
        "lint",
        "test"
      ],
      "files": [
        "./src/**/*.ts",
        "./tsconfig.json"
      ],
      "output": [
        "./dist/**"
      ],
      "clean": "if-file-deleted"
    },
    "test": {
      "command": "nyc --reporter=html mocha --extension ts -r esr-register.js './src/**/*.test.ts'",
      "files": [
        "./src/**/*.ts",
        "./esr-register.js",
        "./tsconfig.json"
      ],
      "output": [
        "./nyc_output/**",
        "./coverage/**"
      ],
      "clean": "if-file-deleted"
    },
    "test:watch": {
      "command": "nodemon -e ts -x pnpm test",
      "service": true
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "author": "Ganesha <reekoheek@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/decompress": "^4.2.4",
    "@types/fs-extra": "^11.0.1",
    "@types/minimist": "^1.2.2",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.16.2",
    "@types/tmp": "^0.2.3",
    "esbuild-runner": "^2.2.2",
    "eslint-config-xinix": "^2.0.1",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.22",
    "nyc": "^15.1.0",
    "typescript": "^5.0.4",
    "wireit": "^0.9.5"
  },
  "dependencies": {
    "@changesets/cli": "^2.26.1",
    "decompress": "^4.2.1",
    "fs-extra": "^11.1.1",
    "tmp": "^0.2.1"
  }
}
