{
  "name": "archet",
  "version": "1.0.0",
  "description": "Archetype task runner",
  "main": "dist/index.js",
  "bin": {
    "archet": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "node ./dist",
    "dev": "nodemon -x \"esr --cache\" -w src -e ts ./src/index.ts",
    "dev:one": "esr --cache ./src/index.ts",
    "lint": "eslint .",
    "build": "rm -rf dist; tsc",
    "build:check": "tsc --noEmit",
    "test": "mocha --extension ts -r esr-register.js ./src/**/*.test.ts",
    "test:watch": "npm test -- -w",
    "test:cover": "nyc --reporter=html npm test",
    "test:watch-cover": "nodemon -e ts -x 'npm run test:cover'"
  },
  "author": "Ganesha <reekoheek@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/decompress": "^4.2.4",
    "@types/fs-extra": "^11.0.1",
    "@types/minimist": "^1.2.2",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.16.2",
    "@types/tmp": "^0.2.3",
    "esbuild-runner": "^2.2.2",
    "eslint-config-xinix": "^2.0.1",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.22",
    "nyc": "^15.1.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "commander": "^10.0.1",
    "decompress": "^4.2.1",
    "fs-extra": "^11.1.1",
    "minimist": "^1.2.8",
    "tmp": "^0.2.1"
  }
}
